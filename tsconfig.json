{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "outDir": "build/dist",
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017"
        ],
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
    },
    "types": ["react", "react-dom", "react-native", "react-navigation"],
    "exclude": [
        "build",
        "node_modules",
        "jest.config.js",
        "App.js",
        "babel.config.js",
        "rn-cli.config.js",
        "./src/native-base-theme",
        "./src/lib/react-native-ratings",
        "assets",
        "./__test__"
    ],
}